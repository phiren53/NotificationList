@model IEnumerable<NotificationList.Models.OverGroup>

@{
    ViewBag.Title = "OverGroup";
}



<h2>OverGroup</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@

    @Html.TextBox("txtDBName")
    <input type="button"
           id="btnDBConnect"
           value="Connect Database"
           onclick=onButtonClick() />
    
</p>
<div id="tabs">
    <ul class="nav nav-tabs">
        <li class="nav active"><a data-toggle="tab" href="#home" id="default">ISPs</a></li>
        <li class="nav"><a data-toggle="tab" href="#menu1" id="tabSSN">SSN</a></li>
        <li class="nav"><a data-toggle="tab" href="#menu2" id="tabDOB">DOB</a></li>
        <li class="nav"><a data-toggle="tab" href="#menu3" id="tabFN">FirstName</a></li>
        <li class="nav"><a data-toggle="tab" href="#menu4" id="tabLN">LastName</a></li>
        <li class="nav"><a data-toggle="tab" href="#menu5" id="tabFNLN">FirstName & LastName</a></li>
        <li class="nav"><a data-toggle="tab" href="#menu6" id="tabSubPopulation">Sub Population</a></li>
        <li class="nav"><a data-toggle="tab" href="#menu7" id="tabFullPopulation">Full Population</a></li>
        <li class="nav"><a data-toggle="tab" href="#menu8" id="tabEntity">Entity</a></li>
    </ul>
    <div class="tab-content">
        <div id="home" class="tab-pane fade in active">
            @Html.Partial("DataListView")
        </div>
        <div id="menu1" class="tab-pane fade">
        </div>
        <div id="menu2" class="tab-pane fade">
        </div>
        <div id="menu3" class="tab-pane fade">
        </div>
        <div id="menu4" class="tab-pane fade">
        </div>
        <div id="menu5" class="tab-pane fade">
        </div>
        <div id="menu6" class="tab-pane fade">
        </div>
        <div id="menu7" class="tab-pane fade">
        </div>
        <div id="menu8" class="tab-pane fade">
        </div>

    </div>

</div>


<script type="text/javascript">

    var currId;
    var currDivID;
    var currDatabase;

    $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
        currId = $(e.target).attr("id");
        currDivID = e.target.hash;
        currDatabase = document.getElementById("txtDBName").value;
        debugger;
        $.ajax({
            url: '/OverGroup/OGSSN',
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            data: {
                tabIdName: currId,
                databaseName: currDatabase,
                IsUpdateReviewFlag: "",
                cra_uniqueid: ""
            },
            dataType: 'html',
            success: function (result) {
                $(currDivID).html(result);
            }
        });
    });


    function onButtonClick(isUpdateReviewFlg, cra_uniqueid) {
        debugger;
        if (currId == undefined) currId = "default";
        if (currDivID == undefined) currDivID = "#home";
        currDatabase = document.getElementById("txtDBName").value;
        $.ajax({
            url: '/OverGroup/OGSSN',
            contentType: 'application/html; charset=utf-8',
            type: 'GET',
            data: {
                tabIdName: currId,
                databaseName: currDatabase,
                IsUpdateReviewFlag: (isUpdateReviewFlg == undefined ? "" : isUpdateReviewFlg),
                cra_uniqueid: cra_uniqueid
            },
            dataType: 'html',
            success: function (result) {
                $(currDivID).html(result);
            }
        });
    }

</script>


